# format :
# border background text indicator

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	tray_output eDP1
		status_command i3status
		font pango:Ubuntu Mono 8
		colors {
			separator $baseD1
			background $baseD3
			statusline $base1
			focused_workspace $blue $base3 $baseD3
			active_workspace $blue $baseD3 $base3
			inactive_workspace $baseD3 $baseD3 $base3
			urgent_workspace $red $baseD3 $base3
		}
}

client.focused $blue $base3 $baseD3 $green
client.focused_inactive $blue $baseD3 $base3 $green
client.unfocused $baseD3 $baseD3 $base3 $green
client.urgent $red $baseD3 $base3 $green
