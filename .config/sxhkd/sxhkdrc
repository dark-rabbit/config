#
# bspwm hotkeys
#

# logout
super + alt + Escape
	pkill -x panel; bspc quit

# fermer une fenetre
super + w
	bspc window -c
# tuer une fenetre qui bug
super + shift + x
	bspc window -k

# max la fenetre en gardant la bar
super + t
	bspc desktop -l next

# reinitialise le split ratio
super + b
	bspc desktop -B

# s pour float, f pour fullscreen
super + {s,f}
	bspc window -t {floating,fullscreen}

# dernier bureau utilise 
super + c
	bspc desktop -f last

# se balader dans les écrans 
super + {_,shift + }z
	bspc monitor -f {next,prev}

# se balade dans les fenetres, ou les bouge avec shift
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# se balade dans l'historique des fenetres
super + {_,shift + }Tab
	bspc window -f {next,prev}

# se balade dans les bureau
super + {a, q}
	bspc desktop -f {prev,next}

# preselection du split
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# annulation de la presel
super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# redimensionnement des fenetres
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

# swap de bureau
super + ctrl + {1-9,0}
	bspc desktop -s ^{1-9,10}

# rotation bureau
super + r
	bspc desktop -R 90

# trucs de souris avec focus et redimensionnement 
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}
	~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u


# Histoire d'historique
# super + {o,i}
# 	bspc control --record-history off; \
# 	bspc window {older,newer} -f; \
# 	bspc control --record-history on

#
# wm independent hotkeys
# 

super + Return
	urxvt

super + space
	dmenu_run -b

# make sxhkd reload its configuration files:

super + Escape
	pkill -U

# backlight control
ctrl + shift + s
	xbacklight -inc 1
ctrl + alt + shift + s
	xbacklight -inc 10
ctrl + shift + a
	xbacklight -dec 1
ctrl + alt + shift + a
	xbacklight -dec 10
# volume control
ctrl + shift + x
	/usr/bin/pulseaudio-ctl up
ctrl + shift + z
	/usr/bin/pulseaudio-ctl down
ctrl + shift + c
	/usr/bin/pulseaudio-ctl mute
# touchpad
ctrl + shift + d
	/home/lapin/Scripts/tools/touchpad_toggle.sh
# firefox
super + n
	firefox
# Music
super + m
	clementine
