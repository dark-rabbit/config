# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = false
		color_bad = "#F22C40"
		color_good = "#5AB738"
		color_degraded = "#DF5320"
		interval = 5
}

order += "disk /"
order += "disk /home"
order += "disk /mnt/Data"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime local"

# disk "path" {
#	format = "label %avail"
# }
disk "/" {
	format = "Root %avail"
}
disk "/home" {
	format = "Home %avail"
}
disk "/mnt/Data" {
	format = "Data %avail"
}
wireless _first_ {
	format_up = "Ip %ip"
		format_down = ""
}
ethernet _first_ {
	format_up = "Ip %ip"
		format_down = ""
}
load {
	format = "Cpu %1min"
}
tztime local {
	format = "Time %d/%m/%Y %H:%M"
}

# unused
run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}
run_watch VPN {
	pidfile = "/var/run/vpnc/pid"
}
