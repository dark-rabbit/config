# parametres principaux
update_interval 1
double_buffer yes
use_spacer no

# font
use_xft yes
xftfont Ubuntu:bold:size=10

# color
default_color white
default_shade_color black
draw_shades yes
color0 A1CD4C
color1 5C008C
color2 D64937
color3 A01F62 

# Desktop parameters
own_window yes
own_window_type panel
own_window_transparent yes
background no
gap_y 2
gap_x 2

TEXT
${time %d/%m/%y, %H:%M} $color0 Battery: ${battery} $color1 CPU: ${cpu cpu0}% ${cpu cpu1}% ${cpu cpu2}% ${cpu cpu3}% $color2 Temp: ${hwmon 0 temp 1}Â°C $color3 RAM: ${memperc}%
