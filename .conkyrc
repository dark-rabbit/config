# parametres principaux
update_interval 1
double_buffer yes
use_spacer none

# font
use_xft yes
xftfont Sans:bold:size=6

# color
default_color white
# default_shade_color black
draw_shades yes

# solarized
color0 6699cc 
color1 66cccc
color2 cccccc

# Desktop parameters
own_window yes
own_window_type panel
own_window_transparent yes
background no

# a changer si dual screen

# single monitor or no-left additional monitors
gap_x 2
gap_y 2

# left 1280*1024 monitor
# gap_x 1282
# gap_y 258

# left 1920*1080 monitor
# gap_x 1922
# gap_y 314


TEXT
$color0 ${time %d/%m/%y} $color1 ${time %H:%M} $color2 ${exec xtitle}
