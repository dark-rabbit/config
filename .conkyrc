# parametres principaux
update_interval 1
double_buffer yes
use_spacer no

# font
use_xft yes
xftfont Ubuntu:bold:size=10

# color
default_color white
default_shade_color black
draw_shades yes
color0 D51189 
color1 006CB7
color2 D64937
color3 A1CD4C

# Desktop parameters
own_window yes
own_window_type panel
own_window_transparent yes
background no

# a changer si dual screen
gap_y 2
# gap_y 258
gap_x 2
